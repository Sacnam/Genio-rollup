{
  "name": "genio-feed-extension",
  "version": "1.7.8",
  "private": true,
  "type": "module",
  "scripts": {
    "build:js": "rollup -c",
    "copy-assets": "node -e \"require('fs/promises').cp('src', 'dist', { recursive: true, filter: path => !path.endsWith('.js') })\"",
    "build": "npm run build:js && npm run copy-assets"
  },
  "dependencies": {
    "firebase": "^10.12.2",
    "marked": "^15.0.12",
    "sortablejs": "^1.15.6",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.18.0",
    "rollup-plugin-copy": "^3.5.0"
  }
}
